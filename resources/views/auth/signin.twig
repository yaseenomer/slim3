{% extends 'templates/app.twig' %}

{% block content %}

    <div class="row">
        <div class="col-lg-6 col-lg-offset-3">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    Sign Up
                </div>
                <div class="panel-body">

                    <form action="{{ path_for('auth.signin') }}" method="post" autocomplete="off">
                        <div class="form-group {{ errors.email ? ' has-error' : '' }}">
                            <lable for="email">Email</lable>
                            <input type="text" name="email" id="email" class="form-control" value="{{ old.email }}">
                            {% if errors.email %}
                                <span><span class="help-block">{{ errors.email | first }}</span></span>
                            {% endif %}
                        </div>

                        <div class="form-group {{ errors.password ? ' has-error' : '' }}">
                            <lable for="password">Password</lable>
                            <input type="password" name="password" id="password" class="form-control" >
                            {% if errors.password %}
                                <span><span class="help-block">{{ errors.password | first }}</span></span>
                            {% endif %}
                        </div>
                        <button type="submit" class="btn btn-primary"><i class="fa fa-sign-in"></i> Sign in</button>

                        {{ csrf.field | raw }}
                    </form>
                </div>


            </div>
        </div>
    </div>

{% endblock %}